<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/skull_white</item>
        <item name="android:textColorSecondary">@color/secondary_gray</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/pcg_orange</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="popupMenuStyle">@style/PopupStyle</item>
        <item name="android:popupMenuStyle">@style/PopupStyle</item>
        <item name="android:alertDialogStyle">@style/AlertDialogCustom</item>
    </style>

    <style name="PopupStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/skull_white</item>
    </style>

    <style name="ActionMode" parent="@style/Widget.AppCompat.Light.ActionMode.Inverse">
        <item name="background">@color/colorPrimaryDark</item>
    </style>


    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">@color/pcg_orange</item>
        <item name="android:textColorPrimary">@color/pcg_orange</item>
        <item name="colorPrimary">@color/pcg_orange</item>
        <item name="android:borderlessButtonStyle">@color/pcg_orange</item>
    </style>

</resources>
